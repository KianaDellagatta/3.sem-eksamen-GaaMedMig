---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Adgang">
    <main>
        <!-- FULLSCREEN OVERLAY -->
        <div
            style="
                position: fixed;
                inset: 0;
                background: rgb(0, 0, 0);
                backdrop-filter: blur(6px);
                z-index: 9999;
                display: flex;
                align-items: center;
                justify-content: center;
            "
        >
            <!-- LOGIN CARD -->
            <div class="card text-center" style="max-width: 420px; width: 100%;">
                <h1 class="t-h2">Adgang til prototype</h1>

                <p class="t-p mt-4">
                    Dette website er en <strong>redesign-prototype</strong> af et eksisterende site.
                    Adgangen er kun til undervisningsbrug.
                </p>
                <p class="t-p mt-4">
                    koden er: EK
                </p>

                <form id="password-form" class="mt-6">
                    <label class="sr-only" for="password">Adgangskode</label>

                    <input
                        id="password"
                        type="text"
                        class="donation__input"
                        placeholder="Indtast adgangskode"
                        required
                        style="color: var(--color-text);"
                    />

                    <button type="submit" class="btn-base btn-grad-1 mt-4 w-full">
                        Log ind
                    </button>

                    <p
                        id="error"
                        class="t-p mt-4"
                        style="color: red; display: none;"
                    >
                        Forkert adgangskode
                    </p>
                </form>
            </div>
        </div>
    </main>

    <script>
        const PASSWORD = "EK"; // ðŸ‘ˆ change this before hand-in

        const form = document.getElementById("password-form");
        const input = document.getElementById("password") as HTMLInputElement;
        const error = document.getElementById("error");

        form.addEventListener("submit", (e) => {
            e.preventDefault();

            if (input.value === PASSWORD) {
                localStorage.setItem("siteAccess", "true");
                window.location.href = "/";
            } else {
                error.style.display = "block";
            }
        });
    </script>
</MainLayout>