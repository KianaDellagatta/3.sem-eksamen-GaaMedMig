---
const {
  logoSrc = "/Logo.svg",
  logoAlt = "G책 med mig",
  cvrText = "G책 Med Mig er en non-profit virksomhed med samfundsnyttigt form책l. CVR: 56736453",
} = Astro.props;

const socials = [
  { label: "Instagram", href: "https://instagram.com", icon: "/insta.svg" },
  { label: "Facebook", href: "https://facebook.com", icon: "/fb.svg" },
  { label: "Email", href: "mailto:info@gaamedmig.dk", icon: "/mail.svg" },
];
---

<footer class="container-site relative z-20" aria-label="Footer">
  <div class="footer-pill">
    <div class="footer-grid">
      <!-- Logo -->
      <a href="/" class="footer-logo glow-link" aria-label="G책 til forsiden">
        <img src={logoSrc} alt={logoAlt} class="w-full h-full object-contain" />
      </a>

      <!-- Social icons -->
      <div class="footer-icons" aria-label="Sociale links">
        {socials.map((s) => (
          <a
            class="footer-icon-link glow-link"
            href={s.href}
            aria-label={s.label}
          >
            <img src={s.icon} alt="" class="w-10 h-10 object-contain" />
          </a>
        ))}
      </div>

      <!-- Policies -->
      <a href="/policies" class="footer-link glow-link">Policies</a>
    </div>

    <!-- CVR / legal text -->
    <p class="footer-meta">{cvrText}</p>
  </div>
</footer>